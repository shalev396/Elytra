#!/bin/sh
set -e

node ./node_modules/lint-staged/bin/lint-staged.js --quiet

if git diff --cached --name-only | grep -q "^client/"; then
  (
    cd client
    npm run build
    npx eslint . --max-warnings 0
  )
fi

if git diff --cached --name-only | grep -q "^server/"; then
  (
    cd server
    npm run build
    npx eslint . --max-warnings 0
  )
fi
